<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EFGetStarted.AspNetCore.ExistingDb</title>
	@{
		var appRootPath = ViewBag.AppRootPath;
	}
    <environment names="Development">
        <link rel="stylesheet" href="@appRootPath.ToString()lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="@appRootPath.ToString()css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="@appRootPath.ToString()lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="@appRootPath.ToString()css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">EFGetStarted.AspNetCore.ExistingDb</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@appRootPath.ToString()Home">Home</a></li>
					<li><a href="@appRootPath.ToString()Blogs">Blogs</a></li>
					<li><a href="@appRootPath.ToString()Hashes">MyRainbow</a></li>
					<li><a href="@appRootPath.ToString()Home/About">About</a></li>
					<li><a href="@appRootPath.ToString()Home/Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - EFGetStarted.AspNetCore.ExistingDb</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="@appRootPath.ToString()lib/jquery/dist/jquery.js"></script>
        <script src="@appRootPath.ToString()lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="@appRootPath.ToString()js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
                asp-fallback-src="@appRootPath.ToString()lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="@appRootPath.ToString()lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="@appRootPath.ToString()js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>