@inject Microsoft.Extensions.Configuration.IConfiguration Conf
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@{
	ViewData["Title"] = "home.title";
}

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000" data-bs-pause="hover">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
		<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
		<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
	</div>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img src="~/images/banner1.svg" alt="timelapse Webcam Gallery" width="930px" height="294px"
				class="img-fluid" data-i18n="[alt]home.slide1.alt" />
			<div class="carousel-caption d-none d-md-block">
				<h5>
					<span data-i18n="home.slide1.desc">Timelapse WebCam Gallery executed every 10 minutes recorded daily and annually</span>
					<a class="btn btn-primary" href="WebCamGallery" data-i18n="home.learnMore">
						Learn More
					</a>
				</h5>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner2.svg" alt="Hashes" width="930px" height="294px"
				class="img-fluid" data-i18n="[alt]home.slide2.alt" />
			<div class="carousel-caption d-none d-md-block">
				<h5>
					<span data-i18n="home.slide2.desc">Simple rainbow tables proof of concept, with hash verification and bruteforce example</span>
					<a class="btn btn-primary" href="Hashes/" data-i18n="home.seeMore">
						See More
					</a>
				</h5>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner3.svg" alt="Inkball game" width="930px" height="294px"
				class="img-fluid" data-i18n="[alt]home.slide3.alt" />
			<div class="carousel-caption d-none d-md-block">
				<h5>
					<span data-i18n="home.slide3.desc">Inkball game - old-school paper game brought to HTML5</span>
					<a class="btn btn-primary" href="InkBall/Home" data-i18n="home.learnMore">
						Learn More
					</a>
				</h5>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner4.svg" alt="Extensible approach" width="930px" height="294px"
				class="img-fluid" data-i18n="[alt]home.slide4.alt" />
			<div class="carousel-caption d-none d-md-block">
				<h5>
					<span data-i18n="home.slide4.desc">Extensible modularized approach combining best practices of C# dotnet and JavaScript, HTML5 modern design</span>
					<a class="btn btn-primary" target="_blank" href="https://github.com/ChaosEngine/Dotnet-Playground"
						data-i18n="home.seeRepository">
						See repository
					</a>
				</h5>
			</div>
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden" data-i18n="home.carousel.prev">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden" data-i18n="home.carousel.next">Next</span>
	</button>
</div>

<div class="row">
	<div class="col-auto">
		<h2 data-i18n="home.links.name">Links</h2>
		<ul>
			<li><a href="~/InkBall/Home" data-i18n="home.links.inkball">InkBall game</a></li>
			<li><a href="~/Home/UnintentionalErr/" data-i18n="home.links.unintError">Unintentional Error</a></li>
			<environment names="Development">
				<li><a href="~/ViewCodeGenerator/" data-i18n="home.links.viewCodeGen">View-Code Generator</a></li>
			</environment>
			<li><a href="~/WebCamGallery" data-i18n="home.links.webCam">WebCam Gallery</a></li>
			<li><a href="~/graphql" data-i18n="home.links.graphql">GraphQL endpoint</a></li>
			@if ((await AuthorizationService.AuthorizeAsync(User, null, IdentityManager2.IdentityManagerConstants.IdMgrAuthPolicy)).Succeeded)
			{
				<li><a href="~/idm/" data-i18n="home.links.identManager">Identity Manager</a></li>
			}
		</ul>
	</div>
</div>
