@inject Microsoft.Extensions.Configuration.IConfiguration Conf
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@{
	ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" data-pause="hover">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
		<li data-target="#myCarousel" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div class="carousel-item active">
			<img src="~/images/banner1.svg" alt="timelapse Webcam Gallery" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					Timelapse WebCam Gallery executed every 10 minutes recorded daily and annually
					<a class="btn btn-primary" href="WebCamGallery">
						Learn More
					</a>
				</p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner2.svg" alt="Hashes" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					Simple rainbow tables proof of concept, with hash verification and bruteforce example
					<a class="btn btn-primary" href="Hashes/">
						See More
					</a>
				</p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner3.svg" alt="Inkball game" class="img-responsive" />
			<div class="carousel-caption" role="option">
                <p>
                    Inkball game - old-school paper game brought to HTML5
					<a class="btn btn-primary" href="InkBall/Home">
                        Learn More
                    </a>
                </p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner4.svg" alt="Extensible approach" class="img-responsive" />
			<div class="carousel-caption" role="option">
                <p>
                    Extensible modularized approach combining best practices of C# dotnet and JavaScript, HTML5 modern design
                    <a class="btn btn-primary" target="_blank" href="https://github.com/ChaosEngine/Dotnet-Playground">
                        See repository
                    </a>
                </p>
			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="row">
	<div class="col-auto">
		<h2>Links</h2>
		<ul>
			<li><a href="~/InkBall/Home">InkBall game</a></li>
			<li><a href="~/Home/UnintentionalErr/">Unintentional Error</a></li>
			<environment names="Development">
				<li><a href="~/ViewCodeGenerator/">View-Code Generator</a></li>
			</environment>
			<li><a href="~/WebCamGallery">WebCam Gallery</a></li>
			@if ((await AuthorizationService.AuthorizeAsync(User, null, IdentityManager2.IdentityManagerConstants.IdMgrAuthPolicy)).Succeeded)
			{
				<li><a href="~/idm/">Identity Manager 2</a></li>
			}
		</ul>
	</div>
</div>
