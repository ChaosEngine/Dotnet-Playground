@page
@model DeletePersonalDataModel
@{
	ViewData["Title"] = "Delete Personal Data";
	ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning d-flex align-items-center warn-icon" role="alert">
	<div>
		Deleting this data will permanently remove your account, and this cannot be recovered.
	</div>
</div>

<div>
	<form id="delete-user" method="post" class="row g-2">
		<div asp-validation-summary="All" class="text-danger"></div>
		@if (Model.RequirePassword)
		{
			<div class="col-12">
				<label asp-for="Input.Password" class="form-label"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
		}
		<div class="col-12">
			<button class="btn btn-danger" type="submit">Delete data and close my account</button>
		</div>
	</form>
</div>
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}