@model EFGetStarted.AspNetCore.ExistingDb.Models.Blog
@using EFGetStarted.AspNetCore.ExistingDb.Controllers
@inject Microsoft.Extensions.Configuration.IConfiguration Conf
@{
    ViewBag.Title = "New Blog";
}

<h2>@ViewData["Title"]</h2>
<p>
	<a href="~/@(BlogsController.ASPX)">Blogs</a>
</p>

<form action="~/@(BlogsController.ASPX)/@(nameof(BlogsController.Create))" method="post" role="form">
	@Html.AntiForgeryToken()
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@(nameof(BlogsController.Create))" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
