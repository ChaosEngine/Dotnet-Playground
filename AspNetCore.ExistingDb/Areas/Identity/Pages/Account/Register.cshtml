@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
		<form method="post" action="~/Identity/Account/Register?returnUrl=@Model.ReturnUrl">
			<h4>Create a new account.</h4>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Name"></label>
				<input asp-for="Input.Name" class="form-control" />
				<span asp-validation-for="Input.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Age"></label>
				<input asp-for="Input.Age" class="form-control" />
				<span asp-validation-for="Input.Age" class="text-danger"></span>
			</div>
			<div class="form-group custom-control custom-switch">
				<input type="checkbox" class="custom-control-input" asp-for="Input.DesktopNotifications" />
				<label class="custom-control-label" asp-for="Input.DesktopNotifications"></label>
			</div>
			<button type="submit" class="btn btn-secondary">Register</button>
		</form>
	</div>
</div>
@section Scripts
{
<partial name="_ValidationScriptsPartial" />

<script type='text/javascript'>
"use strict";

	function StoreApplicationUserSettings() {
		const settings = { DesktopNotifications: $("#Input_DesktopNotifications:checked").length >= 1 };
		const to_store = JSON.stringify(settings);
		sessionStorage.setItem("ApplicationUserSettings", to_store);
	}

	$(document).ready(function () {

		$("#profile-form").submit(function(event) {
			//event.preventDefault();
			StoreApplicationUserSettings();
		});
	});
</script>
}